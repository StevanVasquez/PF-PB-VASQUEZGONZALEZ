                        <label class="hidden" id="cart_id">{{user.cart}}</label>
                        <label class="hidden" id="user_role">{{user.role}}</label>
                        <h2 class="max-w-xl mb-6 text-2xl font-bold text-zinc-300 md:text-4xl">{{product.title}}</h2>
                        <p class="inline-block mb-6 text-4xl font-bold text-gray-800 dark:text-gray-800 ">
                            <span class="text-zinc-300">${{product.price}}</span>
                        </p>
                        <p class="max-w-md text-zinc-300"> {{product.description}}</p>
                        <p class="max-w-md text-zinc-300">Stock: {{product.stock}}</p>
                    </div>
                    <div class="flex flex-wrap items-center gap-4">
                        <button onClick="addToCart('{{product._id}}')" class="bg-stone-500 w-full p-4 rounded-md text-zinc-300 hover:bg-stone-700">Agregar al carrito</button>
                        <button class="bg-slate-800 flex items-center justify-center w-full p-4 text-gray-500 rounded-md hover:bg-gray-600 hover:text-gray-500"><a href="/products">Continuar comprando</a></button>
                        {{#if premium}}
                        <button onClick="deleteProduct('{{product._id}}')" class="bg-gray-700 flex items-center justify-center w-full p-4 text-slate-500 rounded-md hover:bg-gray-800 hover:text-slate-500">Eliminar producto</button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function swalAdded() {
        Swal.fire({
            title: `Producto Agregado!!`,
            text: "Se agregó el producto al carrito correctamente",
            icon: "success"
        })
    }
    function swalPermission() {
        Swal.fire({
            title: `Error de permisos`,
            text: "No tiene permisos para realizar esta acción",
            icon: "warning"
        })
    }
    function swalError(error) {
        Swal.fire({
            title: `Error al intentar la acción`,
            text: error,
            icon: "warning"
        })
    }
    function swalDelete(error) {
        Swal.fire({
            title: `Eliminado correctamente!`,
            text: error,
            icon: "success"
        }).then((result) => {
            if (result.isConfirmed) {
                location.reload();
            }
        });
    }
    function addToCart(pid) {
        const role = document.getElementById('user_role').innerHTML
        if (role === 'admin') return swalPermission()
        const cart_id = document.getElementById('cart_id').innerHTML
        if (!cart_id) return swalPermission()
        fetch(`/api/carts/${cart_id}/product/${pid}`, {
            method: 'post'
        })
            .then(result => result.json())
            .then(result => {
                if (result.status === 'error') return swalError(result.error)
                swalAdded()
            })
            .catch(error => alert(error))
    }
    function deleteProduct(pid) {
        fetch(`/api/products/${pid}`, {
            method: 'DELETE',
            headers: {
                'Content-type': 'application/json; charset=UTF-8' 
            }
        })
            .then(result => result.json())
            .then(result => {
                if (result.status === 'error') return swalError(result.error)
                swalDelete()

            })
            .catch(error => alert(error))
    }
</script>
