<div class="bg-slate-400 h-screen">
    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
        <div class="bg-slate-500 overflow-hidden shadow rounded-lg border px-auto">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-neutral-800">Perfil del usuario</h3>
                <p class="mt-1 max-w-2xl text-sm text-neutral-800">Información acerca del usuario logueado.</p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
                <dl class="sm:divide-y sm:divide-gray-400">
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-neutral-800">Nombre completo</dt>
                        <dd class="mt-1 text-sm text-neutral-800 sm:mt-0 sm:col-span-2">{{userDTO.name}}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-neutral-800">Dirección de email</dt>
                        <dd class="mt-1 text-sm text-neutral-800 sm:mt-0 sm:col-span-2">{{userDTO.email}}</dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-neutral-800">Edad</dt>
                        <dd class="mt-1 text-sm text-neutral-800 sm:mt-0 sm:col-span-2">{{userDTO.age}}</dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-neutral-800">Rol</dt>
                        <dd class="mt-1 text-sm text-neutral-800 sm:mt-0 sm:col-span-2">{{userDTO.role}}</dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-neutral-800">Carrito ID</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{userDTO.cart}}
                        </dd>
                    </div>
                    {{#if premium}}
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-6 sm:gap-2 sm:px-6">
                        <button type="button" class="text-neutral-400 rounded bg-gray-700 w-24 text-sm">
                            <a href="/api/users/control/addProduct">Agregar producto</a>
                        </button>
                        <button type="button" class="text-neutral-400 rounded bg-gray-700 w-24 text-sm">
                            <a href="/api/users/control/updateProduct">Actualizar producto</a>
                        </button>
                    </div>
                    {{/if}}
                </dl>
            </div>
        </div>
    </div>
</div>